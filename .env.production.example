# ─── Database (Cloud SQL) ─────────────────────────────────────────────────────
DATABASE_URL=postgresql+psycopg://tuwaiq:<PASSWORD>@<CLOUD_SQL_IP>:5432/tuwaiq_accounting
POSTGRES_USER=tuwaiq
POSTGRES_PASSWORD=<PASSWORD>
POSTGRES_DB=tuwaiq_accounting

# ─── Security ─────────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
SECRET_KEY=<GENERATE_WITH_openssl_rand_-hex_32>
ACCESS_TOKEN_EXPIRE_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_MINUTES=15

# ─── CORS ─────────────────────────────────────────────────────────────────────
CORS_ORIGINS=["https://accounting.maqayes.com"]

# ─── Redis ────────────────────────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ─── Frontend (build-time arg for Next.js) ────────────────────────────────────
NEXT_PUBLIC_API_URL=https://accounting.maqayes.com

# ─── SMTP (optional) ─────────────────────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
NOTIFICATION_ENABLED=false

# ─── File Storage ─────────────────────────────────────────────────────────────
FILE_STORAGE_PATH=/app/uploads
FILE_STORAGE_BACKEND=local
